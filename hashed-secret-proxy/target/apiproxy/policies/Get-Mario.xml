<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ServiceCallout async="false" continueOnError="false" enabled="true" name="Get-Mario">
    <DisplayName>Get Mario</DisplayName>
    <Properties/>
    <Request clearPayload="true" variable="credcheckRequest">
        <IgnoreUnresolvedVariables>false</IgnoreUnresolvedVariables>
        <Set>
            <Verb>POST</Verb>
            <Payload contentType="application/json" variablePrefix="#" variableSuffix="$">
                {
                    "username": #credentials.username$,
                    "password": #credentials.password$
                }
            </Payload>
        </Set>
    </Request>
    <Response>credCheckResponse</Response>
    <HTTPTargetConnection>
        <Properties/>
        <URL>https://apigee-test.gw.booking.com/mariomock</URL>
    </HTTPTargetConnection>
</ServiceCallout>